CC	= @CC@
CFLAGS	= @CFLAGS@
LDFLAGS	= @LDFLAGS@
NROFF   = @NROFF@
INSTALL	= @INSTALL@

prefix	= @prefix@
bindir  = $(prefix)@bindir@
mandir  = $(prefix)@mandir@

man1dir	= $(mandir)/man1

all:	ranpwd

.PREFIXES: .c .o

.c.o:
	$(CC) $(CFLAGS) -c $<

ranpwd: ranpwd.o
	$(CC) $(LDFLAGS) -o $@ $<

install:
	$(INSTALL) -m 755 ranpwd   $(INSTALLROOT)$(bindir)
	$(INSTALL) -m 644 ranpwd.1 $(INSTALLROOT)$(man1dir)

clean:
	rm -f ranpwd *.o *~ \#* core

